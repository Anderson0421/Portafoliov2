---
import MenuItems from "../data/menuItemsData";
import MenuItemView from "../components/MenuItemView.astro";
import ProjectPreview from "../components/ProjectPreview.astro";
import Layout from "./Layout.astro";
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <style>
        html{
            scroll-behavior: smooth;
        }
    </style>
    </head>
    <body>
        {
            MenuItems.map(({ icon, title, url}) => (
            <MenuItemView icon={icon} title={title} url={url} />
            ))
        }
        <Layout title="Mi portafolio.">
            <section class="ml-80 pt-10 overflow-x-hidden max-md:ml-5 max-md:pt-1 relative overflow-hidden" id="home">
                <slot />      
            </section>
        </Layout>
        </div>
    </body>
</html>


