---
    const {project} = Astro.props;
---
<div class="ml-7 relative flex max-md:flex-col w-full h-full bg-clip-border text-gray-100 shadow-lg">
    <a href={project.url}>   
        <div class="relative mx-4 mt-4 overflow-hidden text-white shadow-lg rounded-xl bg-blue-gray-500 bg-clip-border shadow-blue-gray-500/40">
        <img src={project.frontmatter.image.url} class="w-[650px] h-72"  title="Project AnderDev" alt="imgproject"/>
        <div class="absolute inset-0 w-max h-full to-bg-black-10 bg-gradient-to-tr from-transparent via-transparent to-black/60"></div>
        </div>
    </a> 
        <div class="p-6 w-3/4 max-md:w-full">
        <div class="flex items-center justify-between mb-3">
            <h5 class="block font-sans text-xl antialiased font-bold leading-snug tracking-normal text-blue-gray-900">
                <a href={project.url}>{project.frontmatter.title}</a>
            </h5>
        </div>
        <p class="block font-sans text-base w-3/4 max-md:w-full antialiased font-light leading-relaxed text-gray-400">
            {project.frontmatter.description}
        </p>
        <div class="inline-flex flex-wrap items-center gap-3 mt-4">
            <div class="bg-gray-800 rounded-lg p-2 group">
                <img class="w-10 group-hover:scale-110 transition-all duration-300" src={project.frontmatter.tecnologias.tec1} alt="tecs">
            </div>
            <div class="bg-gray-800 rounded-lg p-2 group">
                <img class="w-10 group-hover:scale-110 transition-all duration-300" src={project.frontmatter.tecnologias.tec2} alt="tecs">
            </div>

            <div class="bg-gray-800 rounded-lg p-2 group">
                <img class="w-10 group-hover:scale-110 transition-all duration-300" src={project.frontmatter.tecnologias.tec3} alt="tecs">
            </div>
        
        </div>
        </div>
</div>