---
import ProjectPreview from '../components/ProjectPreview.astro';
const projects = await Astro.glob('.././pages/projects/*md')
import Layout from '../layouts/Layout.astro';

---
<Layout>
    <section class="ml-72 pt-10 overflow-x-hidden gap-y-5 max-xl:justify-center max-sm:mr-10 flex-wrap max-md:ml-0 max-md:pt-1 relative overflow-hidden" id="home">
        <h1 class="ml-10 text-3xl font-bold flex items-center gap-4 mb-10 text-gray-50">
            Mis Proyectos
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-briefcase-filled" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M22 13.478v4.522a3 3 0 0 1 -3 3h-14a3 3 0 0 1 -3 -3v-4.522l.553 .277a20.999 20.999 0 0 0 18.897 -.002l.55 -.275zm-8 -11.478a3 3 0 0 1 3 3v1h2a3 3 0 0 1 3 3v2.242l-1.447 .724a19.002 19.002 0 0 1 -16.726 .186l-.647 -.32l-1.18 -.59v-2.242a3 3 0 0 1 3 -3h2v-1a3 3 0 0 1 3 -3h4zm-2 8a1 1 0 0 0 -1 1a1 1 0 1 0 2 .01c0 -.562 -.448 -1.01 -1 -1.01zm2 -6h-4a1 1 0 0 0 -1 1v1h6v-1a1 1 0 0 0 -1 -1z" stroke-width="0" fill="currentColor" /></svg>
        </h1>
        {
            projects.map(project => <ProjectPreview {... project} project={project} />)
        }        
</section>
</Layout>